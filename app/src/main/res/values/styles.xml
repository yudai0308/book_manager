<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDefault</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sawarabi_mincho_regular</item>
    </style>

    <style name="FilterButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/space_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="FilterButton.Selected" parent="FilterButton">
        <item name="android:background">@drawable/bg_filter_btn_selected</item>
    </style>

    <style name="FilterButton.Selectable" parent="FilterButton">
        <item name="android:background">@drawable/bg_filter_btn_selectable</item>
    </style>

    <style name="SortRadioButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="color">@android:color/tab_indicator_text</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

</resources>
